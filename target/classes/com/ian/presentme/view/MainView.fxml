<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <VBox id="main_top_wrapper">
            <fx:include source="MainMenuBar.fxml"/>
            <!--Toolbar on main view-->
            <ToolBar>
                <Button id="main_toolbar_start" text="Start Presentation" />
                <Button id="main_toolbar_add_song" text="Add Song" />
            </ToolBar>
        </VBox>
    </top>

    <left>
        <SplitPane id="main_left_wrapper" dividerPositions="0.5" orientation="VERTICAL">
            <!--List of all songs-->
            <VBox alignment="TOP_CENTER">
                <Label text="Songs" />
                <TextField id="main_songs_list_view_search_field" promptText="Search..." />
                <ListView id="main_songs_list_view" />
            </VBox>
            <!--Currently active set list-->
            <VBox alignment="TOP_CENTER">
                <Label text="Set List" />
                <TextField id="main_set_list_view_search_field" promptText="Search..." />
                <ListView id="main_set_list_view" />
            </VBox>
        </SplitPane>
    </left>

    <center>

        <SplitPane orientation="VERTICAL">
            <!--Slides of selected song or set-->
            <FlowPane id="main_slides_flow_pane"/>
            <!--Backgrounds list-->
            <FlowPane id="main_background_flow_pane"/>
        </SplitPane>
    </center>

    <right>
        <!--Preview pane of presentation-->
        <StackPane id="main_presentation_preview" alignment="TOP_RIGHT">
            <Text text="Preview"/>
        </StackPane>
    </right>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" spacing="10">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <TextField fx:id="create_song_title" promptText="Title..."/>
    <TextField fx:id="create_song_artist" promptText="Artist..."/>
    <TextArea fx:id="create_song_lyrics" promptText="Lyrics..."/>
    <Button fx:id="create_song_save" text="Save"/>

</VBox>

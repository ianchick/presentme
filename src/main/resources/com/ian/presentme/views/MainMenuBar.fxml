<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<!-- Menu bar on main view -->
<MenuBar fx:id="main_menu"
         xmlns:fx="http://javafx.com/fxml">
    <Menu fx:id="main_menu_file" text="File">
        <MenuItem fx:id="main_menu_file_refresh" text="Refresh" />
        <MenuItem fx:id="main_menu_file_pref" text="Preferences" />
    </Menu>
    <Menu fx:id="main_menu_view" text="View">
        <CheckMenuItem fx:id="main_menu_view_bg" text="Backgrounds" />
        <CheckMenuItem fx:id="main_menu_view_preview" text="Preview" />
    </Menu>
    <Menu fx:id="main_menu_help" text="Help">
        <MenuItem fx:id="main_menu_help_about" text="About PresentMe" />
    </Menu>
</MenuBar>
